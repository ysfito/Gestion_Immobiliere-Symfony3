{% extends '::layoutfront.html.twig' %}

{% block slide %}

    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.16/css/jquery.dataTables.css">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  
    <div class="container">
        <table id="table_id" class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Date de Reservation</th>
                    <th>Nom du Client</th>
                    <th>Adresse du Client</th>
                    <th>Nom du Bien</th>
                    <th>Image du Bien</th>
                    <th>libelle du Bien</th>
                    <th>Prix de la location</th>
                    <th>Plus Options</th>

                </tr>

            </thead>
            {% for liste in listes %}
                <tbody>
                    <tr>
                        <td scope="row">{{liste.id}}</td>
{#                          <td>{{liste.dateReservation}}</td> 
 #}                        <td>{{liste.nomComplet}}</td>
                        <td>{{liste.adresse}}</td>
                        <td>{{liste.nomBien}}</td>
                        <td> <img src="{{ asset('images') }} {{liste.image}}"> </td>
                        <td>{{liste.libelle}}</td>
                        <td>{{liste.prixLocation}}</td>
                        <td> <a href="{{ path('details',{id: liste.id}) }}" class="badge badge-primary">Details</a>  </td>

                    </tr>

                    {% else %}
                    <td colspan="6">Aucune Reservation</td>
            </tbody>
            {% endfor %}
        </table>
</div>
    <script
    src="https://code.jquery.com/jquery-3.3.1.min.js"
    integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous"></script>
    
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.js"></script>
    
    <script type="text/javascript">
        $(document).ready( function () {            
            $('#table_id').DataTable();
        } );
        
        
    </script>

{% endblock %}

