{% extends '::layoutfront.html.twig' %}

{% block head %}
{{ parent() }}
<h1>{% block title %}Welcome to the Front:list page{% endblock %}</h1>

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.16/css/jquery.dataTables.css">
     {% endblock %}

{% endblock %}

{% block catalogue %}
<div class="container">
<table id="table_id" class="display">
<thead>
<tr>
<th>#</th>
<th>nom du Bien</th>
<th>Etat du Bien</th>
<th>Description</th>
<td>prix de la Location</td>

</tr>
 </thead>
{% for bien in biens %}
<tbody>
<tr>
<td scope="row">{{bien.id}}</td>
<td>{{bien.nomBien}}</td>
<td>{{bien.etat}}</td>
<td>{{bien.description}}</td>
</tr>

{% else %}
<td colspan="6">Aucun utilisateur</td>
</tbody>
{% endfor %}
</table>
</div>
{% endblock %}

